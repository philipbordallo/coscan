{
  "name": "coscan",
  "version": "0.1.0",
  "author": "Philip Bordallo",
  "license": "MIT",
  "type": "module",
  "main": "./src/main.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs",
      "types": "./dist/main.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "browserslist": [
    "extends @coscan/browserslist-config"
  ],
  "dependencies": {
    "@coscan/jsx-scanner": "*"
  },
  "devDependencies": {
    "@coscan/rollup": "*"
  },
  "peerDependencies": {},
  "scripts": {
    "build": "wireit",
    "start": "wireit",
    "rollup:build": "wireit",
    "rollup:watch": "wireit",
    "type:build": "wireit",
    "type:watch": "wireit"
  },
  "wireit": {
    "build": {
      "command": "echo >> /dev/null",
      "dependencies": [
        "../jsx-scanner:build",
        "rollup:build",
        "type:build"
      ]
    },
    "start": {
      "command": "cat",
      "service": true,
      "dependencies": [
        "../jsx-scanner:build",
        "rollup:watch",
        "type:watch"
      ]
    },
    "rollup:build": {
      "command": "rollup -c ./rollup.config.js",
      "files": [
        "./src/**/*.ts",
        "./rollup.config.js"
      ],
      "output": [
        "./dist/**/main.js",
        "./dist/**/main.cjs"
      ]
    },
    "rollup:watch": {
      "command": "rollup -c ./rollup.config.js --watch",
      "service": true,
      "clean": false
    },
    "type:build": {
      "command": "tsc --build --pretty",
      "files": [
        "./src/**/*.ts",
        "./tsconfig.json"
      ],
      "output": [
        "./dist/**/*.d.ts",
        "./dist/**/*.d.ts.map",
        "./dist/tsconfig.tsbuildinfo"
      ]
    },
    "type:watch": {
      "command": "tsc --build --emitDeclarationOnly --preserveWatchOutput --watch",
      "service": true,
      "clean": false
    }
  }
}
